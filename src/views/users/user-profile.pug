extends ../base
include ../mixins/video

block content
    div.profile__data
        img(src=`/${user.avatarUrl}`, alt="#").avatar    
        h3 #{user.name}    
        h2 User Name : #{user.username} 
        h2 Email : #{user.email}
        h2 Location : #{user.location}

    div.video-grid
        each info in videos
            +video(info)
        else 
            span.empty__message No videos found
