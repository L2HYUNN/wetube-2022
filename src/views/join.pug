extends base

block content 
    if userNameErrorMessage
        span=userNameErrorMessage
    if emailNameErrorMessage
        span=emailNameErrorMessage
    if passwordErrorMessage
        span=passwordErrorMessage
    if error 
        span=error
    form(method="POST")
        input(name="name", type="text", placeholder="name", required)
        input(name="email", type="email", placeholder="email", required)
        input(name="username", type="text", placeholder="username", required)
        input(name="password1", type="password", placeholder="password", required)
        input(name="password2", type="password", placeholder="password", required)
        input(name="location", type="text", placeholder="location", required)
        input(type="submit", value="Join")
        include partials/social-login    
    div.auth-switch 
        a(href="/login")  
            span Already have an account? &rarr;
