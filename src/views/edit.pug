extends base
include mixins/video

block content
    h4 Change Title of #{video.title}
    form(action="" method="POST") 
        input(name="title" type="text" placeholder="Video Tilte" value=video.title required)
        input(type="submit" value="Save")
    h3 #{video.views === 1 ? `${video.views} view` : `${video.views} views`} 
    a(href=`/videos/${video.id}`) Watch Video &rarr;
    ul
        if video
            +video(video)
        else
            p Not Found
