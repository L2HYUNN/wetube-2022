extends ../base

block content 
    div.upload__container
        div.upload__video
            video(src="")#preview     
            button#actionBtn.social__btn Start Recording
        if error 
            span=error
        form(method="POST" enctype="multipart/form-data")
            label(for="video") Video File
            input(name="video" type="file" id="video" accept="video/*" required) 
            label(for="thumb") Thumbnail File
            input(name="thumb" type="file" id="thumb" accept="image/*" required) 
            input(name="title" placeholder="Title" type="text" required)
            input(name="hashtags" placeholder="Hashtags, separated by comma" type="text" required)
            textarea(name="description" placeholder="Description" required)
            input(name="submit" type="submit" value="Upload Video")

block scripts 
    script(src="/assets/js/recorder.js")
